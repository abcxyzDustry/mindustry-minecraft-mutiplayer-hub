{
  "name": "mindustry-minecraft-hub-desktop",
  "version": "1.0.0",
  "description": "Mindustry & Minecraft Multiplayer Hub - Desktop App",
  "main": "main.js",
  "author": "Mindustry & Minecraft Multiplayer Hub",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "build:win": "electron-builder --win --x64",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "build": {
    "appId": "com.mindustry.minecraft.hub",
    "productName": "Mindustry & Minecraft Multiplayer Hub",
    "directories": {
      "output": "release"
    },
    "files": [
      "main.js",
      "icon.png",
      "tray-icon.png",
      "../dist/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "mac": {
      "target": ["dmg", "zip"],
      "icon": "icon.png"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "icon": "icon.png"
    }
  }
}
